{{!< default}}

<main class="gh-main">
    {{#post}}
        <article class="gh-article gh-inner {{post_class}} article-container">
            <div class="gh-article-main">
                <div class="gh-article-header">
                    <h1 class="gh-article-title">{{title}}</h1>

                    {{#if primary_tag}}
                        <nav class="gh-crumb" aria-label="Breadcrumb">
                            <ul class="gh-crumb-list" itemscope itemtype="https://schema.org/BreadcrumbList">
                                <li class="gh-crumb-item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                                    <a href="{{@site.url}}" target="_blank" itemprop="item">
                                        <span itemprop="name">{{@site.title}}</span>
                                    </a>
                                    <meta itemprop="position" content="1" />
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="arrow-icon">
                                        <path d="M20 16 8 28l2 2 14-14L10 2 8 4z"></path>
                                    </svg>
                                </li>
                                <li class="gh-crumb-item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                                    <a href="{{primary_tag.url}}" target="_blank" itemprop="item">
                                        <span itemprop="name">{{primary_tag.name}}</span>
                                    </a>
                                    <meta itemprop="position" content="2" />
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="arrow-icon">
                                        <path d="M20 16 8 28l2 2 14-14L10 2 8 4z"></path>
                                    </svg>
                                </li>
                                <li class="gh-crumb-item crumb-title">
                                    <span>{{title}}</span>
                                </li>
                            </ul>
                        </nav>
                        <a class="gh-article-tag" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                    {{/if}}

                    {{#if custom_excerpt}}
                        <p class="gh-article-excerpt">{{custom_excerpt}}</p>
                    {{/if}}

                    {{> "post-meta" }}

                    {{> "feature-image"}}
                </div>

                <section class="gh-content">
                    {{content}}
                </section>
            </div>
            <div class="gh-side-bar">
                {{> "side-bar"}}
            </div>
        </article>
    {{/post}}

    {{!-- {{> "related-posts"}} --}}

    {{#post}}
        {{> "comments"}}
    {{/post}}
</main>